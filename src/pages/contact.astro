---
import { loadQuery } from "../sanity/lib/load-query";
import Layout from "../layouts/Layout.astro";
import OurText from "../components/OurText.astro";
import Button from "../components/Button.astro";

interface ContactData {
    email: string;
    instagram: string;
}

// Fetch contact page data from Sanity
const { data: contactData } = await loadQuery<ContactData>({
    query: `*[_type == "contact"][0]{email, instagram}`,
});

const { email, instagram } = contactData;
---

<Layout title="Contact Us">
    <OurText title="Contact Us" />
    <section class="md:flex md:items-center md:space-x-8 py-8">
        <div class="md:w-1/2 mb-8 md:mb-0">
            <p class="text-lg mb-4">
                Email: <a
                    href={`mailto:${email}`}
                    class="text-color hover:underline">{email}</a
                >
            </p>
            <p class="text-lg mb-8">
                Instagram: <a
                    href={`https://instagram.com/${instagram}`}
                    target="_blank"
                    class="text-color hover:underline">@{instagram}</a
                >
            </p>

            <h2 class="text-2xl font-bold mb-4">Send Us a Message</h2>
            <form action="/send-email" method="POST" class="space-y-4">
                <div>
                    <label for="name" class="block text-base font-medium"
                        >Your Name</label
                    >
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#f6615a]"
                    />
                </div>
                <div>
                    <label for="email" class="block text-base font-medium"
                        >Your Email</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#f6615a]"
                    />
                </div>
                <div>
                    <label for="message" class="block text-base font-medium"
                        >Your Message</label
                    >
                    <textarea
                        id="message"
                        name="message"
                        required
                        class="w-full p-3 border rounded-md focus:outline-none focus:ring-2 focus:ring-[#f6615a]"
                    ></textarea>
                </div>
                <Button label="Send Message" type="submit" variant="primary" />
            </form>
        </div>
        <div class="md:w-1/2">
            <img src="/cat_vase.svg" alt="Contact Us" class="w-full h-auto" />
        </div>
    </section>
</Layout>
