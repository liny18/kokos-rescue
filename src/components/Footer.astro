---
import { loadQuery } from "../sanity/lib/load-query";

interface ContactData {
  email: string;
  instagram: string;
}

// Fetch contact page data from Sanity
const { data: contactData } = await loadQuery<ContactData>({
  query: `*[_type == "contact"][0]{email, instagram}`,
});

const { email, instagram } = contactData;
---

<footer
  class="text-center border-t-2 border-gray-300 py-3 px-8 flex justify-between items-center footer-bg-color text-white"
>
  <img src="/cat-footer.svg" alt="Koko's Rescue Logo" class="h-12" />
  <div class="text-center">
    <p class="text-sm">{email} | New York City</p>
    <p class="text-sm">&copy; 2024 Koko's Rescue. All rights reserved.</p>
  </div>
  <a href={`https://instagram.com/${instagram}`} target="_blank">
    <img src="/icons8-instagram.svg" alt="Instagram" class="h-14" />
  </a>
</footer>
