---
interface Props {
    icon: string;
    name: string;
    url: string;
}

const { icon, name, url } = Astro.props;
---

<div class="flex flex-col items-center">
    <a href={url} target="_blank">
        <img src={icon} alt={name} class="h-16" />
    </a>
    <a href={url} target="_blank" class="text-color hover:underline">
        Help us with {name}
    </a>
</div>
